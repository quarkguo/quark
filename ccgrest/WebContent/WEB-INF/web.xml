<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<display-name>CCG RestfulService</display-name>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<servlet>
		<servlet-name>ccgrest</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>admin</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- this is should be the existing Service and database access xml -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/ccg_coreservices_beans.xml
			classpath:/spring/ccg_dataacess_beans_test.xml
			/WEB-INF/ccgrest-servlet.xml
			/WEB-INF/admin-servlet.xml
		</param-value>
	</context-param>
	<servlet-mapping>
		<servlet-name>ccgrest</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>admin</servlet-name>
		<url-pattern>/admin/*</url-pattern>
	</servlet-mapping>	
	
	<welcome-file-list>
		<welcome-file>rest_api.html</welcome-file>
	</welcome-file-list>
